<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="apple-touch-icon"
      sizes="180x180"
      href="/favicon/apple-touch-icon.png"
    />
    <link
      rel="icon"
      type="image/png"
      sizes="32x32"
      href="/favicon/favicon-32x32.png"
    />
    <link
      rel="icon"
      type="image/png"
      sizes="16x16"
      href="/favicon/favicon-16x16.png"
    />
    <link rel="manifest" href="/favicon/site.webmanifest" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:ital,opsz,wght@0,14..32,100..900;1,14..32,100..900&family=Trade+Winds&display=swap"
      rel="stylesheet"
    />
    <script
      src="https://kit.fontawesome.com/dd409ee73c.js"
      crossorigin="anonymous"
    ></script>
    <link rel="stylesheet" href="/styles/reset.css" />
    <link rel="stylesheet" href="/styles/index.css" />
    <title>Hellfire | Home</title>
    <meta
      name="description"
      content="Hellfire - a simple social feed for developers"
    />
  </head>
  <body>
    <header class="site-header">
      <div class="brand">
        <a class="home-link" href="/" aria-label="Go to homepage">
          <img
            class="logo"
            src="/assets/logo-inspired.png"
            alt="Hellfire logo"
          />
          <span class="app-name">Hellfire</span>
        </a>
      </div>
      <nav class="menu" aria-label="Primary navigation">
        <% if (currentUser) { %>
        <ul class="user-menu">
          <li>
            <div class="membership"><%= currentUser.membershipStatus %></div>
          </li>
          <li>
            <div class="username <%= currentUser.membershipStatus %>">
              @<%= currentUser.username %>
            </div>
          </li>
          <li>
            <form action="/logout" method="post">
              <button type="submit" class="logout-btn">Log Out</button>
            </form>
          </li>
        </ul>
        <% } else { %>
        <ul class="auth-nav">
          <li><a class="nav-link sign-up-btn" href="/register">Sign Up</a></li>
          <li><a class="nav-link log-in-btn" href="/login">Log In</a></li>
        </ul>
        <% } %>
      </nav>
    </header>
    <main>
      <h1 class="visually-hidden">Home page</h1>
      <section aria-labelledby="join-club-title" class="section join-club">
        <h2 id="join-club-title" class="section-title">Join Our Club</h2>
        <% if (!currentUser) { %>
        <p>Sign in to post a new message.</p>
        <% } else { %>
        <% if (currentUser.membershipStatus !== 'admin' && currentUser.membershipStatus !== 'member') { %>
        <form action="/membership/member" method="post" class="join-form">
          <label class="code-label" for="member-code-input">
            Become a Member
          </label>
          <input
            class="code-input"
            type="text"
            id="member-code-input"
            name="memberCode"
            placeholder="Enter Member Code"
            required
          />
          <button class="submit-btn" type="submit">Submit</button>
        </form>
        <% } %>
        <% if (currentUser.membershipStatus !== 'admin') { %>
        <form action="/membership/admin" method="post" class="join-form">
          <label class="code-label admin-code-label" for="admin-code-input">
            Become an Admin
          </label>
          <input
            class="code-input admin-code-input"
            type="text"
            id="admin-code-input"
            name="adminCode"
            placeholder="Enter Admin Code"
            required
          />
          <button class="submit-btn admin-submit-btn" type="submit">
            Submit
          </button>
        </form>
        <% } %>
        <% if (currentUser) { %>
        <button class="create-message-btn" id="create-message-btn">
          Post a Message
        </button>
        <% } %>
        <% } %>
      </section>
      <section aria-labelledby="feed-title" class="section feed">
        <h2 id="feed-title" class="section-title">Messages</h2>
        <ul class="message-list">
          <% messages.forEach((message) => { %>
          <li>
            <article
              class="message"
              aria-labelledby="message-<%= message.id %>-title"
            >
              <header class="message-header">
                <% if (currentUser?.membershipStatus === 'admin' ||
                currentUser?.membershipStatus === 'member') { %>
                <p class="message-author <%= message.membershipStatus %>">
                  From: <%= message.firstName %> <%= message.lastName %> (@<%=
                  message.username %>)
                </p>
                <time class="message-time" datetime="<%= message.createdAt %>">
                  <%= new Date(message.createdAt).toLocaleDateString('en-GB', {
                  day: '2-digit', month: 'short', year: 'numeric' }) %>
                </time>
                <% } else { %>
                <p class="message-author">From: Anonymous User</p>
                <% } %>
              </header>
              <div class="message-content">
                <h3 class="message-title" id="message-<%= message.id %>-title">
                  Title: <%= message.title %>
                </h3>
                <p class="message-description"><%= message.description %></p>
              </div>
              <% if (currentUser?.membershipStatus === 'admin') { %>
              <footer class="message-actions">
                <form
                  action="/message/<%= message.id %>?_method=DELETE"
                  method="post"
                  class="delete-message-form"
                  onsubmit="return confirm('Delete this message?');"
                >
                  <button type="submit" class="delete-btn">Delete</button>
                </form>
              </footer>
              <% } %>
            </article>
          </li>
          <% }) %>
        </ul>
      </section>
    </main>
    <div
      id="create-message-modal"
      class="modal <%= oldData ? 'show' : '' %>"
      role="dialog"
      aria-modal="true"
      aria-labelledby="modal-title"
      hidden
    >
      <div class="modal-content">
        <h2 id="create-message-title" class="modal-title">
          Create New Message
        </h2>
        <form
          action="/message"
          method="post"
          class="create-message-form"
          id="create-message-form"
        >
          <div class="form-field">
            <label for="message-title">Title</label>
            <input
              value="<%= oldData?.title || '' %>"
              type="text"
              id="message-title"
              name="title"
              placeholder="Enter Message Title"
              required
              minlength="5"
              maxlength="100"
              autocomplete="off"
              aria-describedby="title-error"
              aria-invalid="<%= errors?.title ? 'true' : 'false' %>"
            />
            <% if (errors?.title) { %>
            <p id="title-error" class="field-error"><%= errors.title.msg %></p>
            <% } %>
          </div>
          <div class="form-field">
            <label for="message-description">Description</label>
            <textarea
              value="<%= oldData?.description || '' %>"
              id="message-description"
              name="description"
              placeholder="Enter Message Description"
              rows="8"
              minlength="5"
              maxlength="250"
              required
              aria-describedby="description-error"
              aria-invalid="<%= errors?.description ? 'true' : 'false' %>"
            ></textarea>
            <% if (errors?.description) { %>
            <p id="description-error" class="field-error">
              <%= errors.description.msg %>
            </p>
            <% } %>
          </div>
          <div class="form-actions">
            <button type="submit" class="submit-btn">Post</button>
            <button type="button" id="close-modal-btn" class="close-btn">
              Cancel
            </button>
          </div>
        </form>
      </div>
    </div>
  </body>
  <script src="/scripts/index.js"></script>
</html>
